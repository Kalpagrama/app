<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10006" id="com.kalpagramma.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kalpagramma Mobile</name>
    <description>Kalpagramma Mobile App</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon density="ldpi" src="www/statics/icons/android/mipmap-ldpi/icon.png" />
        <icon density="mdpi" src="www/statics/icons/android/mipmap-mdpi/icon.png" />
        <icon density="hdpi" src="www/statics/icons/android/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" src="www/statics/icons/android/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="www/statics/icons/android/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="www/statics/icons/android/mipmap-xxxhdpi/icon.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
